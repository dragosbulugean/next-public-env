{
  "name": "@archbee/next-public-env",
  "description": "Manage type-safe runtime environment variables in Next.js for both the server and the client. Works for page router.",
  "version": "1.1.8",
  "author": "dragosbulugean",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "types": "./dist/server/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/server/index.js",
      "browser": "./dist/browser/index.js",
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/server/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "check-types": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": "16.0.10",
    "zod": "4.1.13"
  },
  "dependencies": {
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.9.0",
    "@types/react": "^19.2.2",
    "jsdom": "^27.0.1",
    "next": "16.0.10",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1",
    "zod": "4.1.13"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragosbulugean/next-public-env.git"
  },
  "bugs": {
    "url": "https://github.com/dragosbulugean/next-public-env/issues"
  },
  "homepage": "https://github.com/dragosbulugean/next-public-env#readme",
  "keywords": [
    "nextjs",
    "react",
    "zod"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
